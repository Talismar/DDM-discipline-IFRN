{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,

    /* 
      Adicionei apos instalar o plugin do babel
      --- babel-plugin-module-resolver ---
    */
    "baseUrl": "./",
    "paths": {
      "@assets/*": ["./src/assets/*"],
      "@components/*": ["./src/components/*"],
      "@routes/*": ["./src/routes/*"],
      "@screens/*": ["./src/screens/*"],
      "@storage/*": ["./src/storage/*"],
      "@theme/*": ["./src/theme/*"],
      "@utils/*": ["./src/utils/*"]
    }
  }
}
